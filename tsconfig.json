{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "lib": ["es2019", "DOM"],
    "target": "es5",
    "sourceMap": true,
    "outDir": "./dist/",

    // Enable iteration on iterators
    "downlevelIteration": true,
    // Be stricter about types
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": false,
    "alwaysStrict": true
  },
  "exclude": ["node_modules"]
}
